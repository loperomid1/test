# ====================================
# SSH Manager - Переменные окружения
# ====================================

# Скопируйте этот файл в .env и заполните своими значениями
# ВАЖНО: Добавьте .env в .gitignore!

# =====================================
# ОСНОВНЫЕ НАСТРОЙКИ
# =====================================

# Конфигурация приложения (development/production/testing)
FLASK_CONFIG=development

# Секретный ключ для безопасности (ОБЯЗАТЕЛЬНО изменить в продакшене!)
# Сгенерировать: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-super-secret-key-here-change-me

# Режим отладки Flask
FLASK_DEBUG=1

# =====================================
# БАЗА ДАННЫХ
# =====================================

# SQLite (по умолчанию для разработки)
# DEV_DATABASE_URL=sqlite:///database/ssh_servers_dev.db

# PostgreSQL (рекомендуется для продакшена)
# DATABASE_URL=postgresql://username:password@localhost:5432/ssh_manager

# MySQL/MariaDB
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/ssh_manager

# =====================================
# SSH НАСТРОЙКИ ПРОИЗВОДИТЕЛЬНОСТИ
# =====================================

# Таймаут SSH подключений (секунды)
# Рекомендуется: 10-15 для стабильной работы, 5-8 для быстрой проверки
SSH_TIMEOUT=5

# Максимальное количество параллельных SSH подключений
# Рекомендуется: 10-20 для стабильной работы, 50+ для быстрой обработки
# ВНИМАНИЕ: Слишком много потоков может перегрузить систему!
SSH_MAX_WORKERS=20

# Настройки по умолчанию для UI
DEFAULT_THREADS=10
DEFAULT_TIMEOUT=5

# Максимальные значения (ограничения для безопасности)
MAX_THREADS=100
MAX_TIMEOUT=60

# =====================================
# ВЕРЕВЕР НАСТРОЙКИ
# =====================================

# Хост и порт для Flask приложения
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# =====================================
# ЛОГИРОВАНИЕ
# =====================================

# Уровень логирования (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# Логирование SSH операций
SSH_LOG_ENABLED=1
SSH_LOG_LEVEL=INFO

# =====================================
# ПРОДАКШЕН НАСТРОЙКИ
# =====================================

# Домен приложения
# DOMAIN=yourdomain.com

# SSL настройки
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Настройки безопасности для продакшена
# SESSION_COOKIE_SECURE=1
# SESSION_COOKIE_HTTPONLY=1
# PERMANENT_SESSION_LIFETIME=3600

# =====================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
# =====================================

# Максимальный размер загружаемого файла (в байтах)
# MAX_CONTENT_LENGTH=16777216

# Путь для временных файлов
# TEMP_FOLDER=/tmp/ssh_manager

# Автоматическое удаление временных файлов (секунды)
TEMP_FILE_CLEANUP=3600

# =====================================
# ГЕОЛОКАЦИЯ
# =====================================

# API ключ для геолокации (опционально)
# Используется ip-api.com (бесплатно) или можно настроить другие сервисы
# GEOIP_API_KEY=your-api-key
# GEOIP_SERVICE=ip-api  # ip-api, ipstack, maxmind

# Таймаут для запросов геолокации (секунды)
GEOIP_TIMEOUT=5

# Включить кеширование геоданных
GEOIP_CACHE=1

# =====================================
# МОНИТОРИНГ И АЛЕРТЫ
# =====================================

# Email настройки для уведомлений
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=1
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password

# Telegram бот для уведомлений
# TELEGRAM_BOT_TOKEN=your-bot-token
# TELEGRAM_CHAT_ID=your-chat-id

# Webhook для уведомлений о завершении операций
# WEBHOOK_URL=https://your-webhook-endpoint.com/ssh-manager

# =====================================
# НАСТРОЙКИ ПРОИЗВОДИТЕЛЬНОСТИ
# =====================================

# Пул соединений к базе данных
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Кеширование результатов (секунды)
CACHE_TIMEOUT=300

# Batch размер для массовых операций
BATCH_SIZE=100

# Ограничения скорости (requests per minute)
RATE_LIMIT=1000

# =====================================
# БЕЗОПАСНОСТЬ
# =====================================

# Шифрование паролей в базе данных (рекомендуется для продакшена)
# ENCRYPT_PASSWORDS=1
# ENCRYPTION_KEY=your-encryption-key-32-chars

# Ограничение доступа по IP
# ALLOWED_IPS=127.0.0.1,192.168.1.0/24

# Базовая аутентификация (для простой защиты)
# BASIC_AUTH_USERNAME=admin
# BASIC_AUTH_PASSWORD=secure-password

# =====================================
# ДОПОЛНИТЕЛЬНЫЕ ВОЗМОЖНОСТИ
# =====================================

# Автоматическая проверка серверов (cron-like расписание)
# AUTO_CHECK_SCHEDULE=0 */6 * * *  # каждые 6 часов

# Экспорт отчетов
# REPORTS_ENABLED=1
# REPORTS_FORMAT=json,csv,xlsx

# Интеграция с внешними системами
# EXTERNAL_API_ENABLED=0
# EXTERNAL_API_TOKEN=your-api-token

# =====================================
# РЕКОМЕНДАЦИИ ПО НАСТРОЙКЕ
# =====================================

# Для локальной разработки:
# SSH_MAX_WORKERS=10
# SSH_TIMEOUT=10

# Для небольшого продакшена (до 1000 серверов):
# SSH_MAX_WORKERS=20
# SSH_TIMEOUT=15

# Для большого продакшена (1000+ серверов):
# SSH_MAX_WORKERS=50
# SSH_TIMEOUT=12
# DATABASE_URL=postgresql://...

# Для быстрой проверки (может быть нестабильно):
# SSH_MAX_WORKERS=100
# SSH_TIMEOUT=5

# ВНИМАНИЕ: 
# - Слишком много потоков может перегрузить сеть и целевые серверы
# - Слишком маленький таймаут может привести к ложным негативным результатам
# - Тестируйте настройки на небольшой выборке серверов перед массовым использованием